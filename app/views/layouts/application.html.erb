<!DOCTYPE html>
<html>
<head>
  <title>Eclipse Phase Player Assistant</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render 'layouts/navbar' %>
<div class="jumbotron"></div>
<div class="spacer-row-15px"></div>
<div class="container">
  <div class="row-fluid">
    <% flash.each do |key, msg| %>
        <div id="<%= key %>" class="alert alert-<%= key %>">
          <p><%= msg %></p>
        </div>
    <% end %>
  </div>
  <div class="row-fluid">
    <%= yield %>
  </div>
</div>

</body>
</html>
