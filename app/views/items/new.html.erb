<div>
  <%= form_for @item, url: create_character_item_url(params[:char_id]) do |f| %>
      <%= f.error_messages %>
      <div class="row-fluid" style="line-height: 25px">
        <div class="span2 text-right"><%= f.label :name, 'Item\'s name' %></div>
        <div class="span4"><%= f.text_field :name, style: 'width: 300px' %></div>
        <div class="span6"><a href="#" rel="tooltip" data-toggle="tooltip" data-placement="right" title="This item's name."><span class="badge badge-info">?</span></a></div>
      </div>

      <div class="row-fluid" style="line-height: 25px">
        <div class="span2 text-right"><%= f.label :item_type, 'Type' %></div>
        <div class="span4"><%= f.collection_select :item_type, ItemType.all.sort_by(&:name), :id, :name, style: 'width: 300px' %></div>
        <div class="span6"><a href="#" rel="tooltip" data-toggle="tooltip" data-placement="right" title="What type of item is this?"><span class="badge badge-info">?</span></a></div>
      </div>

      <div class="row-fluid" style="line-height: 25px">
        <div class="row-fluid">
          <div class="span2 text-right"><%= f.label :description, 'Description' %></div>
          <div class="span10"><a href="#" rel="tooltip" data-toggle="tooltip" data-placement="right" title="A description of this item (stats, special abilities, etc)"><span class="badge badge-info">?</span></a></div>
        </div>
        <div class="row-fluid">
          <div class="span2"></div>
          <div class="span10"><%= f.text_area :description, style: 'width: 300px' %></div>
        </div>
      </div>

      <hr/>
      <div class="row-fluid" style="line-height: 25px">
        <div class="span2"></div>
        <div class="span8">
          <%= f.submit 'Add to inventory', class: "btn btn-primary" %>
          <%= link_to 'Cancel', :back, class: 'btn' %>
        </div>
        <div class="span2"></div>
      </div>
  <% end %>
</div>
