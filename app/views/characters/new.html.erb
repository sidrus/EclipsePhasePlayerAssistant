<div>
  <%= form_for @character do |f| %>
      <div class="row-fluid" style="line-height: 25px">
        <div class="span2 text-right"><%= f.label :name, 'Character\'s name' %></div>
        <div class="span4"><%= f.text_field :name, style: 'width: 300px' %></div>
        <div class="span6"><a href="#" rel="tooltip" data-toggle="tooltip" data-placement="right" title="A name for your character"><span class="badge badge-info">?</span></a></div>
      </div>

      <div class="row-fluid" style="line-height: 25px">
        <div class="span2 text-right"><%= f.label :campaign, 'Campaign' %></div>
        <div class="span4"><%= f.text_field :campaign, style: 'width: 300px' %></div>
        <div class="span6"><a href="#" rel="tooltip" data-toggle="tooltip" data-placement="right" title="Use this field to identify the campaign/table the character belongs to"><span class="badge badge-info">?</span></a></div>
      </div>

      <div class="row-fluid" style="line-height: 25px">
        <div class="span2 text-right"><%= f.label :money, 'Starting Creds' %></div>
        <div class="span4"><%= f.text_field :money %></div>
        <div class="span6"><a href="#" rel="tooltip" data-toggle="tooltip" data-placement="right" title="The amount of credits the character has when you create it"><span class="badge badge-info">?</span></a></div>
      </div>

      <hr/>
      <div class="row-fluid" style="line-height: 25px">
        <div class="span2"></div>
        <div class="span4"><%= f.submit class: "btn btn-primary" %></div>
        <div class="span6"></div>
      </div>
  <% end %>
</div>
